<p id="notice"><%= notice %></p>

<h1 class="page-header">Postagens <%= link_to 'Novo Tweet', new_post_path, class:"btn btn-default" %></h1>

<% @posts.each do |post| %>
  <div class="row">
      <div class="col-lg-12">
          <div class="panel panel-primary">
              <div class="panel-heading">
                  <%= post.user.email %>

                  <% if current_user.id != post.user.id %>
                    <button class="btn btn-success">Seguir</button>
                  <% end %>
              </div>
              <div class="panel-body">
                  <p><%= post.message %></p>
              </div>
              <div class="panel-footer">
                  <span class="glyphicon glyphicon-time"></span> <%= post.created_at %>

                  <% if current_user.id == post.user.id %>
                      <%= link_to 'Deletar', post, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' } %>
                  <% end %>
              </div>
          </div>
      </div>
  </div>
<% end %>
